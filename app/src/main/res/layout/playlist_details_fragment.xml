<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="io.github.pberdnik.eduplayer.feat.playlistdetails.PlaylistDetailsViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feat.playlistdetails.PlaylistDetailsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/details_ml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".feat.playlistdetails.PlaylistDetailsFragment">

            <ImageView
                android:id="@+id/playlist_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:tint="#8000"
                app:imageUrl="@{viewModel.playlist.thumbnails[viewModel.playlist.thumbnails.size() - 1].url}"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/maxresdefault" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_back" />

            <View
                android:id="@+id/details_background"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#eee"
                app:layout_constraintBottom_toBottomOf="@id/playlist_description"
                app:layout_constraintTop_toBottomOf="@id/playlist_thumbnail" />

            <TextView
                android:id="@+id/playlist_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="#fff"
                android:text="@{viewModel.playlist.playlist.title}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/playlist_thumbnail"
                tools:text="Beneficial Bugs" />

            <TextView
                android:id="@+id/playlist_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@{@string/playlist_info(`Youtube Learning`, viewModel.playlist.playlist.publishedAtString)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playlist_thumbnail"
                tools:text="YouTube Learning  Â·  12 months ago" />

            <TextView
                android:id="@+id/playlist_videos_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                android:text="@{@string/videos_count(viewModel.playlist.playlist.videosCount)}"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playlist_description"
                tools:text="7 videos" />

            <TextView
                android:id="@+id/playlist_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@{viewModel.playlist.playlist.description}"
                app:layout_constraintTop_toBottomOf="@id/playlist_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/long_playlist_description_sample" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_play_24dp"
                android:backgroundTint="@color/colorAccent"
                app:tint="#fff"
                app:layout_constraintBottom_toBottomOf="@+id/details_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/details_background" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlist_items_rv"
            listData="@{viewModel.playlistItems}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#fff"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_ml"
            tools:listitem="@layout/list_item_playlist_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>