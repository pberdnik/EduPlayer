<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="io.github.pberdnik.eduplayer.feat.playlistdetails.PlaylistDetailsViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:titleEnabled="false"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                app:toolbarId="@+id/toolbar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/details_ml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_collapseMode="pin"
                    tools:context=".feat.playlistdetails.PlaylistDetailsFragment">

                    <View
                        android:id="@+id/toolbar_background"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#fff"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/details_background"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#eee"
                        app:layout_constraintBottom_toBottomOf="@id/playlist_description"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar_background" />

                    <TextView
                        android:id="@+id/playlist_title"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="@{viewModel.playlist.playlist.title}"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Beneficial Bugs" />

                    <TextView
                        android:id="@+id/playlist_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="@{@string/playlist_info(`Youtube Learning`, viewModel.playlist.playlist.publishedAtString)}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/playlist_title"
                        tools:text="YouTube Learning  Â·  12 months ago" />

                    <TextView
                        android:id="@+id/playlist_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:paddingBottom="16dp"
                        android:text="@{viewModel.playlist.playlist.description}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/playlist_info"
                        tools:text="@string/long_playlist_description_sample" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_collapseMode="none"
                    app:navigationIcon="@drawable/ic_back"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_anchor="@id/app_bar"
            app:layout_anchorGravity="bottom|end"
            app:srcCompat="@drawable/ic_play_24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlist_items_rv"
            listData="@{viewModel.playlistItems}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/list_item_playlist_item" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>