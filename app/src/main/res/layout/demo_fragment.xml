<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".demo.DemoFragment">

        <io.github.pberdnik.eduplayer.customview.playbackspeedcontrol.PlaybackSpeedControl
            android:id="@+id/playbackSpeedControl"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:paddingStart="64dp"
            android:paddingEnd="64dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <io.github.pberdnik.eduplayer.customview.playbackspeedcontrol.PlaybackSpeedControl
            android:id="@+id/playbackSpeedControl2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playbackSpeedControl"/>

        <io.github.pberdnik.eduplayer.customview.playbackspeedcontrol.PlaybackSpeedControl
            android:id="@+id/playbackSpeedControl3"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_margin="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playbackSpeedControl2"/>

        <io.github.pberdnik.eduplayer.customview.playbackspeedcontrol.PlaybackSpeedControl
            android:id="@+id/playbackSpeedControl4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playbackSpeedControl3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>